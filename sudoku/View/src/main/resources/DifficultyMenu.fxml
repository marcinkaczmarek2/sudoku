<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane minHeight="300" minWidth="400" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DifficultyMenuController">

   <VBox fx:id="difficultyVBox" alignment="CENTER" minWidth="250" prefHeight="450.0" prefWidth="200.0" spacing="50.0">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <Label fx:id="difficultyLabel" alignment="CENTER" text="Choose your difficulty">
         <font>
            <Font name="Consolas" size="18.0"/>
         </font>
      </Label>
      <RadioButton fx:id="easyRadio" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                   prefHeight="30.0" prefWidth="180.0" selected="true" text="Easy">
         <toggleGroup>
            <ToggleGroup fx:id="difficultyGroup"/>
         </toggleGroup>
         <font>
            <Font name="Consolas Bold Italic" size="15.0"/>
         </font>
      </RadioButton>
      <RadioButton fx:id="mediumRadio" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                   prefHeight="30.0" prefWidth="180.0" text="Medium" toggleGroup="$difficultyGroup">
         <font>
            <Font name="Consolas Bold Italic" size="15.0"/>
         </font>
      </RadioButton>
      <RadioButton fx:id="hardRadio" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                   prefHeight="30.0" prefWidth="180.0" text="Hard" toggleGroup="$difficultyGroup">
         <font>
            <Font name="Consolas Bold Italic" size="15.0"/>
         </font>
      </RadioButton>
      <Button fx:id="startButton" alignment="CENTER" mnemonicParsing="false" prefHeight="70.0" prefWidth="180.0"
              text="Start" styleClass="minimal-button"/>
   </VBox>
</StackPane>
